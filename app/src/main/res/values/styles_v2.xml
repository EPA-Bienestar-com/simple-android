<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Clinic.V2" />

  <style name="Clinic.V2.Theme" parent="Theme.Design.Light.NoActionBar">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">@color/color_primary_dark</item>
    <item name="colorAccent">@color/color_accent</item>
    <item name="colorError">@color/color_error</item>

    <item name="toolbarStyle">@style/Clinic.V2.ToolbarStyle</item>
    <item name="android:windowBackground">@color/window_background</item>
  </style>

  <style name="Clinic.V2.Theme.BottomSheetActivity">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="Clinic.V2.TextInputLayout">
    <item name="android:theme">@style/Clinic.V2.TextInputLayoutTheme</item>
    <item name="hintTextAppearance">@style/Clinic.V2.TextAppearance.Label</item>
    <item name="errorTextAppearance">@style/Clinic.V2.TextAppearance.TextInputLayoutError</item>
  </style>

  <style name="Clinic.V2.TextAppearance" />

  <style name="Clinic.V2.TextInputLayoutTheme">
    <item name="colorControlNormal">@color/grey2</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Label">
    <item name="android:textSize">@dimen/textsize_12</item>
    <item name="android:letterSpacing" tools:ignore="NewApi">0.03</item>
    <item name="android:lineSpacingExtra">4sp</item>
    <item name="android:textColor">@color/grey1</item>
  </style>

  <style name="Clinic.V2.TextAppearance.TextInputLayoutError">
    <item name="android:textSize">@dimen/textsize_12</item>
    <item name="android:textColor">@color/red1</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body1Left">
    <item name="android:textSize">@dimen/textsize_16</item>
    <item name="android:letterSpacing" tools:ignore="NewApi">0.03</item>
    <item name="android:lineSpacingExtra">8sp</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body1Left.Grey0">
    <item name="android:textColor">@color/grey0</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body1Left.Grey1">
    <item name="android:textColor">@color/grey1</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body1Left.Numeric">
    <item name="android:letterSpacing" tools:ignore="NewApi">0.06</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body1Left.Numeric.Grey0">
    <item name="android:textColor">@color/grey0</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Tag">
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:letterSpacing" tools:ignore="NewApi">0.06</item>
    <item name="android:lineSpacingExtra">8sp</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Tag.Grey1">
    <item name="android:textColor">@color/grey1</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Tag.Green1">
    <item name="android:textColor">@color/green1</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Subtitle1Left">
    <item name="android:textSize">16sp</item>
    <item name="android:letterSpacing" tools:ignore="NewApi">0.01</item>
    <item name="android:lineSpacingExtra">8sp</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Subtitle1Left.Blue1">
    <item name="android:textColor">@color/blue1</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Subtitle1Center">
    <item name="android:textSize">16sp</item>
    <item name="android:letterSpacing" tools:ignore="NewApi">0.01</item>
    <item name="android:lineSpacingExtra">8sp</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Subtitle1Center.Grey2">
    <item name="android:textColor">@color/grey2</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Left">
    <item name="android:textSize">14sp</item>
    <item name="android:letterSpacing" tools:ignore="NewApi">0.02</item>
    <item name="android:lineSpacingExtra">6sp</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Left.Grey0">
    <item name="android:textColor">@color/grey0</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Left.Grey1">
    <item name="android:textColor">@color/grey1</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Left.Green1">
    <item name="android:textColor">@color/green1</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Left.Red1">
    <item name="android:textColor">@color/red1</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Left.Numeric">
    <item name="android:letterSpacing" tools:ignore="NewApi">0.05</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Body2Left.Numeric.Grey1">
    <item name="android:textColor">@color/grey1</item>
  </style>

  <style name="Clinic.V2.CardView">
    <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/raise_card_on_press</item>
    <item name="cardCornerRadius">4dp</item>
  </style>

  <style name="Clinic.V2.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
    <item name="android:background">?colorPrimary</item>
    <item name="titleTextColor">@color/white</item>
    <item name="contentInsetStartWithNavigation">64dp</item>
    <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation_toolbar</item>
    <item name="titleTextAppearance">@style/Clinic.V2.TextAppearance.ToolbarTitle</item>
  </style>

  <style name="Clinic.V2.TextAppearance.ToolbarTitle">
    <item name="android:textSize">@dimen/textsize_18</item>
    <item name="android:letterSpacing" tools:ignore="NewApi">0.01</item>
    <item name="android:lineSpacingExtra">6sp</item>
  </style>

  <style name="Clinic.V2.Button">
    <item name="android:paddingTop">18dp</item>
    <item name="android:paddingBottom">18dp</item>
  </style>

  <!-- PSA: To be used with PrimarySolidButton.kt -->
  <style name="Clinic.V2.Button.Solid">
    <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    <item name="android:background">@null</item>
  </style>

  <style name="Clinic.V2.Button.Solid.WithoutIcon" />

  <style name="Clinic.V2.Button.Solid.WithoutIcon.Blue1">
    <item name="android:background">@color/blue1</item>
  </style>

  <style name="Clinic.V2.Button.WithIcon" />

  <style name="Clinic.V2.Button.WithIcon.Blue2">
    <item name="android:background">#e0f0ff</item>
    <item name="android:textColor">?colorAccent</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:drawablePadding">8dp</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Button1" parent="TextAppearance.AppCompat.Widget.Button">
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">@dimen/textsize_16</item>
    <item name="android:letterSpacing" tools:ignore="NewApi">0.08</item>
    <item name="android:lineSpacingExtra">4sp</item>
  </style>

  <style name="Clinic.V2.TextAppearance.Button1.White100">
    <item name="android:textColor">@color/white100</item>
  </style>

  <style name="Clinic.V2.TextInputEditText">
    <item name="android:paddingTop">6dp</item>
    <item name="android:paddingBottom">@dimen/spacing_16</item>
  </style>

  <style name="Clinic.V2.TextAppearance.H6">
    <item name="android:textSize">20sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:letterSpacing" tools:ignore="NewApi">0.01</item>
    <item name="android:lineSpacingExtra">8sp</item>
    <item name="android:textColor">@color/grey2</item>
  </style>

  <style name="Clinic.V2.TextAppearance.H6.Grey0">
    <item name="android:textColor">@color/grey0</item>
  </style>

  <style name="Clinic.V2.TextAppearance.H6.Grey2">
    <item name="android:textColor">@color/grey2</item>
  </style>

  <style name="Clinic.V2.TextAppearance.H6.Grey1">
    <item name="android:textColor">@color/grey1</item>
  </style>

  <!-- Screen/feature specific styles start here. -->

  <style name="Clinic.V2.BottomAlignedButtonFrame">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:paddingTop">@dimen/spacing_4</item>
    <item name="android:paddingBottom">@dimen/spacing_4</item>
    <item name="android:paddingStart">@dimen/spacing_4</item>
    <item name="android:paddingEnd">@dimen/spacing_4</item>
    <item name="android:layout_alignParentBottom">true</item>
  </style>

  <style name="Clinic.V2.BottomAlignedButtonFrame.Blue2">
    <item name="android:background">@color/blue2</item>
  </style>

  <style name="Clinic.V2.ClearEditTextButton">
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:padding">@dimen/spacing_8</item>
    <item name="android:tint">@color/grey2</item>
    <item name="android:src">@drawable/ic_clear_circular_24dp</item>
    <item name="android:layout_gravity">end</item>
  </style>

  <style name="Clinic.V2.OverdueListAction">
    <item name="android:textAppearance">@style/Clinic.V2.TextAppearance.Body1Left.Grey0</item>
    <item name="android:paddingStart">@dimen/spacing_16</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:drawablePadding">@dimen/spacing_16</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingBottom">@dimen/spacing_12</item>
    <item name="android:paddingTop">@dimen/spacing_12</item>
  </style>

  <style name="Clinic.V2.MedicalHistoryQuestionCheckboxTheme">
    <item name="colorControlNormal">@color/grey2</item>
  </style>

  <style name="Clinic.V2.SummaryMedicalHistoryQuestion">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingEnd">@dimen/spacing_8</item>
    <item name="android:paddingStart">@dimen/spacing_8</item>
  </style>

  <style name="Clinic.V2.LogoWithType" />

  <style name="Clinic.V2.LogoWithType.Large">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:src">@drawable/logo_large</item>
    <item name="android:layout_marginTop">@dimen/spacing_40</item>
    <item name="android:layout_marginBottom">@dimen/spacing_44</item>
  </style>

  <style name="Clinic.V2.RegistrationInputError">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">@color/red1</item>
  </style>

  <style name="Clinic.V2.LoginPinErrorText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/red1</item>
    <item name="android:textSize">@dimen/textsize_14</item>
    <item name="android:visibility">gone</item>
    <item name="android:layout_marginTop">@dimen/spacing_4</item>
  </style>
</resources>
