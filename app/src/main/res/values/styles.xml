<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="ClinicTheme" parent="Theme.Design.Light.NoActionBar">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">@color/color_primary_dark</item>
    <item name="colorAccent">@color/color_accent</item>

    <item name="toolbarStyle">@style/Clinic.ToolbarStyle</item>
    <item name="android:windowBackground">@color/window_background</item>
  </style>

  <style name="Clinic" />

  <style name="ClinicTheme.DialogLikeActivity">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
  </style>

  <style name="Clinic.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
    <item name="android:background">@color/color_primary</item>
    <item name="titleTextColor">@color/white</item>
    <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation_toolbar</item>
  </style>

  <style name="Clinic.Button" />

  <style name="Clinic.Button.PatientEntry">
    <item name="android:textColor">@color/color_accent</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="backgroundTint">#F2F4FB</item>
    <item name="android:drawablePadding">@dimen/spacing_8</item>
    <item name="android:paddingStart">14dp</item>
    <item name="android:paddingEnd">@dimen/spacing_16</item>
  </style>

  <style name="Clinic.ClearButton">
    <item name="android:layout_gravity">end</item>
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:layout_marginTop">14dp</item>
    <item name="android:padding">@dimen/spacing_12</item>
    <item name="android:tint">@color/gray_500</item>
    <item name="android:src">@drawable/ic_clear_circular_16dp</item>
  </style>

  <style name="Clinic.BloodPressureInput">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@null</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:gravity">center|top</item>
    <item name="android:inputType">number</item>
    <item name="android:maxEms">3</item>
    <item name="android:maxLength">3</item>
    <item name="android:minEms">3</item>
    <item name="android:textSize">44sp</item>
  </style>

  <style name="Clinic.BloodPressureInputUnderline">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1.5dp</item>
    <item name="android:layout_marginEnd">24dp</item>
    <item name="android:layout_marginStart">24dp</item>
    <item name="android:background">@color/gray_300</item>
    <item name="android:layout_marginBottom">@dimen/spacing_8</item>
  </style>

  <style name="Clinic.BloodPressureInputLabel">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_horizontal</item>
  </style>

  <style name="Clinic.Separator">
    <item name="android:background">@color/black_opacity_05</item>
  </style>

  <style name="Clinic.Separator.VerticalContent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">2dp</item>
  </style>

  <style name="Clinic.BottomSheet">
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:background">#80000000</item>
  </style>

  <style name="Clinic.LoginPinBackButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/spacing_16</item>
    <item name="android:layout_marginStart">@dimen/spacing_24</item>
    <item name="android:padding">@dimen/spacing_4</item>
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:tint">@color/white</item>
  </style>

  <style name="Clinic.LoginPinPhoneNumber">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginEnd">@dimen/spacing_24</item>
    <item name="android:layout_marginStart">@dimen/spacing_24</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:paddingBottom">26dp</item>
    <item name="android:paddingTop">44dp</item>
    <item name="android:textColor">@color/white_opacity_90</item>
    <item name="android:textSize">32sp</item>
  </style>

  <style name="Clinic.LoginPinEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/spacing_8</item>
    <item name="android:gravity">center</item>
    <item name="android:inputType">numberPassword</item>
    <item name="android:maxLength">4</item>
    <item name="android:textSize">@dimen/textsize_18</item>
  </style>

  <style name="Clinic.LoginPinErrorText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/red_700</item>
    <item name="android:textSize">@dimen/textsize_18</item>
    <item name="android:visibility">gone</item>
  </style>

  <style name="Clinic.LoginPinLabel">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/black_opacity_80</item>
    <item name="android:textSize">@dimen/textsize_18</item>
  </style>

  <style name="Clinic.LoginPinCardContentContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:orientation">vertical</item>
    <item name="android:paddingBottom">@dimen/spacing_32</item>
    <item name="android:paddingEnd">@dimen/spacing_48</item>
    <item name="android:paddingStart">@dimen/spacing_48</item>
    <item name="android:paddingTop">@dimen/spacing_32</item>
  </style>

  <style name="Clinic.LoginPinCard">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">@dimen/spacing_24</item>
    <item name="android:layout_marginStart">@dimen/spacing_24</item>
  </style>

  <style name="Clinic.DoneFrame">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">#69B038</item>
    <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
  </style>

  <style name="Clinic.DoneButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:background">@null</item>
    <item name="android:clickable">false</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:drawableStart">@drawable/ic_done_20dp</item>
    <item name="android:focusable">false</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/textsize_16</item>
  </style>

</resources>
