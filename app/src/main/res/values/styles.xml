<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">@color/color_primary_dark</item>
    <item name="colorAccent">@color/color_accent</item>

    <item name="toolbarStyle">@style/RedApp.ToolbarStyle</item>
    <item name="android:windowBackground">@color/window_background</item>
  </style>

  <style name="RedApp" />

  <style name="RedApp.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
    <item name="android:background">@color/color_primary</item>
    <item name="titleTextColor">@color/white</item>
    <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation_toolbar</item>
  </style>

  <style name="RedApp.Button" />

  <style name="RedApp.Button.PatientEntry">
    <item name="android:textColor">@color/color_accent</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="backgroundTint">#F2F4FB</item>
    <item name="android:drawablePadding">@dimen/spacing_16</item>
    <item name="android:paddingStart">@dimen/spacing_16</item>
    <item name="android:paddingEnd">@dimen/spacing_16</item>
  </style>

  <style name="RedApp.ClearButton">
    <item name="android:layout_gravity">end|center_vertical</item>
    <item name="android:layout_marginBottom">-6dp</item>
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:padding">@dimen/spacing_12</item>
    <item name="android:tint">@color/gray_500</item>
    <item name="android:src">@drawable/ic_clear_circular_16dp</item>
  </style>

  <style name="RedApp.BloodPressureInput">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@null</item>
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:gravity">center|top</item>
    <item name="android:inputType">number</item>
    <item name="android:maxEms">3</item>
    <item name="android:maxLength">3</item>
    <item name="android:minEms">3</item>
    <item name="android:textSize">44sp</item>
    <item name="android:paddingBottom">52dp</item>
  </style>

  <style name="RedApp.BloodPressureInputUnderline">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1.5dp</item>
    <item name="android:layout_marginEnd">24dp</item>
    <item name="android:layout_marginStart">24dp</item>
    <item name="android:background">@color/gray_300</item>
    <item name="android:layout_marginBottom">@dimen/spacing_8</item>
    <item name="android:layout_marginTop">-50dp</item>
  </style>

  <style name="RedApp.BloodPressureInputLabel">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_horizontal</item>
  </style>
</resources>
