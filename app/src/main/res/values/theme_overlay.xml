  </style>

  <style name="ThemeOverlay.Simple.OnSurface34Primary" parent="">
    <item name="colorPrimary">@color/color_on_surface_34</item>
  </style>

  <style name="ThemeOverlay.Simple.Light.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
    <item name="buttonBarNeutralButtonStyle">@style/Widget.Simple.Button.TextButton.Dialog.OnSurface34</item>
    <item name="buttonBarNegativeButtonStyle">@style/Widget.Simple.Button.TextButton.Dialog.OnSurface34</item>
    <item name="buttonBarPositiveButtonStyle">@style/Widget.Simple.Button.TextButton.Dialog</item>
  </style>

  <style name="ThemeOverlay.Simple.Light.Dialog.Alert.Destructive">
    <item name="buttonBarPositiveButtonStyle">@style/Widget.Simple.Button.TextButton.Dialog.Red1</item>
  </style>

  <style name="ThemeOverlay.Simple.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
    <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Simple.Title.Text</item>
    <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Simple.Body.Text</item>
    <item name="buttonBarNeutralButtonStyle">@style/Widget.Simple.Button.TextButton.Dialog.OnSurface34</item>
    <item name="buttonBarNegativeButtonStyle">@style/Widget.Simple.Button.TextButton.Dialog.OnSurface34</item>
    <item name="buttonBarPositiveButtonStyle">@style/Widget.Simple.Button.TextButton.Dialog</item>
  </style>

  <style name="ThemeOverlay.Simple.MaterialAlertDialog.Destructive">
    <item name="buttonBarPositiveButtonStyle">@style/Widget.Simple.Button.TextButton.Dialog.Red1</item>
  </style>

  <style name="ThemeOverlay.Simple.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
  </style>

  <!-- Widget Specific Theme Overlays -->
  <style name="ThemeOverlay.Simple.RadioButton" parent="">
