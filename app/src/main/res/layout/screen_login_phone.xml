<?xml version="1.0" encoding="utf-8"?>
<org.simple.clinic.login.phone.LoginPhoneScreen android:id="@+id/loginphone_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout
    android:id="@+id/loginphone_logo_container"
    style="@style/Clinic.LoginLogoContainer">

    <TextView
      style="@style/Clinic.LoginLogo.Large"
      android:text="@string/app_name" />
  </FrameLayout>

  <View style="@style/Clinic.LoginLogoContainerOverflow" />

  <android.support.v7.widget.CardView
    android:id="@+id/loginphone_card"
    style="@style/Clinic.LoginCard"
    android:layout_below="@+id/loginphone_logo_container">

    <LinearLayout style="@style/Clinic.LoginCardContentContainer">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:labelFor="@+id/loginphone_phone"
        android:text="@string/loginphone_phone_number_hint"
        android:textColor="@color/black_opacity_80"
        android:textSize="@dimen/textsize_18" />

      <EditText
        android:id="@+id/loginphone_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:textSize="@dimen/textsize_18" />
    </LinearLayout>
  </android.support.v7.widget.CardView>

  <Button
    android:id="@+id/loginphone_submit"
    style="@style/Clinic.LoginProceedButton"
    android:text="@string/loginphone_next" />
</org.simple.clinic.login.phone.LoginPhoneScreen>
