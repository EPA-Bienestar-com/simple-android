<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:ignore="MissingPrefix">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:gravity="center"
    android:maxLines="1"
    android:paddingTop="@dimen/spacing_24"
    android:text="@string/appointmentreminder_call_later_in"
    android:textAppearance="@style/Clinic.V2.TextAppearance.H6.Grey0">

    <requestFocus />
  </TextView>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_8"
    android:layout_marginEnd="44dp"
    android:layout_marginStart="44dp"
    android:layout_marginTop="@dimen/spacing_24"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageButton
      android:id="@+id/appointmentreminder_decrement_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:padding="@dimen/spacing_12"
      android:src="@drawable/ic_remove_circle_outline_32dp"
      android:tint="@color/blue1"
      tools:ignore="ContentDescription" />

    <TextView
      android:id="@+id/appointmentreminder_current_date"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/spacing_8"
      android:layout_marginStart="@dimen/spacing_8"
      android:layout_weight="1"
      android:gravity="center_horizontal"
      android:textColor="@color/black_opacity_80"
      android:textSize="@dimen/textsize_34"
      tools:text="4 weeks" />

    <ImageButton
      android:id="@+id/appointmentreminder_increment_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:padding="@dimen/spacing_12"
      android:src="@drawable/ic_add_circle_outline_32dp"
      android:tint="@color/blue1"
      tools:ignore="ContentDescription" />
  </LinearLayout>

  <org.simple.clinic.widgets.PrimarySolidButton
    android:id="@+id/appointmentreminder_done"
    style="@style/Clinic.V2.Button.Solid.WithoutIcon.Blue1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_16"
    android:text="@string/appointmentreminder_done"
    android:textAppearance="@style/Clinic.V2.TextAppearance.Button1.White100" />

</LinearLayout>
