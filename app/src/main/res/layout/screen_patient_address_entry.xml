<?xml version="1.0" encoding="utf-8"?>
<org.resolvetosavelives.red.newentry.address.PatientAddressEntryScreen android:id="@+id/patientaddress_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
      android:id="@+id/patientpersonaldetails_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:title="@string/patiententry_address_title" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingEnd="@dimen/spacing_16"
      android:paddingStart="@dimen/spacing_16"
      android:paddingTop="@dimen/spacing_8">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_8">

        <EditText
          android:id="@+id/patiententry_address_colony_or_village"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Colony or Village"
          android:inputType="textCapSentences|textPostalAddress"
          android:paddingEnd="56dp"
          tools:ignore="RtlSymmetry" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical|end"
          android:layout_marginEnd="@dimen/spacing_4"
          android:text="@string/patiententry_optional"
          android:textSize="@dimen/textsize_12" />
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_8">

        <EditText
          android:id="@+id/patiententry_address_district"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="District"
          android:inputType="textCapSentences|textPostalAddress"
          android:paddingEnd="56dp"
          tools:ignore="RtlSymmetry" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical|end"
          android:layout_marginEnd="@dimen/spacing_4"
          android:text="@string/patiententry_optional"
          android:textSize="@dimen/textsize_12" />
      </FrameLayout>

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_8">

        <EditText
          android:id="@+id/patiententry_address_state"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="State"
          android:inputType="textCapSentences|textPostalAddress"
          android:paddingEnd="56dp"
          tools:ignore="RtlSymmetry" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical|end"
          android:layout_marginEnd="@dimen/spacing_4"
          android:text="@string/patiententry_optional"
          android:textSize="@dimen/textsize_12" />
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>

  <Button
    android:id="@+id/patiententry_address_proceed"
    style="@style/RedApp.Button.PatientEntry.IconOnly"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_margin="@dimen/spacing_16"
    android:contentDescription="@string/patiententry_cd_proceed"
    android:drawableStart="@drawable/ic_arrow_forward_24dp" />
</org.resolvetosavelives.red.newentry.address.PatientAddressEntryScreen>
