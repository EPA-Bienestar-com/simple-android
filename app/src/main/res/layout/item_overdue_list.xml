<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  cardElevation="2dp"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="@dimen/spacing_8">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="@dimen/spacing_16"
      android:orientation="vertical">

      <TextView
        android:id="@+id/overdue_patient_name_gender_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_4"
        android:textColor="@color/black_opacity_90"
        android:textSize="@dimen/textsize_16"
        tools:targetApi="lollipop"
        tools:text="Anisha Acharya" />

      <TextView
        android:id="@+id/overdue_patient_bp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_4"
        android:textColor="@color/black_opacity_50"
        android:textSize="@dimen/textsize_14"
        tools:text="30 days ago: 175/85" />

      <TextView
        android:id="@+id/overdue_days"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_500"
        android:textSize="@dimen/textsize_14"
        tools:text="4 day overdue" />

    </LinearLayout>
    <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/spacing_8"
      android:layout_marginBottom="@dimen/spacing_8"
      android:background="@color/black_opacity_10" />

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/spacing_16"
      android:layout_marginRight="@dimen/spacing_16"
      android:layout_gravity="center_vertical|end"
      android:src="@drawable/ic_call" />
  </LinearLayout>
</android.support.v7.widget.CardView>
