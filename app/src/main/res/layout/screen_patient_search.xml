<?xml version="1.0" encoding="utf-8"?>
<org.simple.clinic.search.PatientSearchScreen android:id="@+id/patientsearch_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:id="@+id/patientsearch_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/elevation_toolbar"
    android:gravity="center_vertical"
    tools:ignore="UnusedAttribute">

    <ImageButton
      android:id="@+id/patientsearch_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:contentDescription="@string/patientsearch_go_back"
      android:padding="@dimen/spacing_12"
      android:src="@drawable/ic_arrow_back_24dp"
      android:tint="@color/black_opacity_50" />

    <!-- privateImeOptions="nm" is used by the AOSP and some keyboards
         to hide the suggestions bar entirely. Gboard ignores this
         unfortunately. -->
    <EditText
      android:id="@+id/patientsearch_fullname"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="@null"
      android:hint="@string/patientsearch_name_or_phone"
      android:imeOptions="actionSearch"
      android:inputType="text|textCapWords|textFilter"
      android:privateImeOptions="nm">

      <requestFocus />
    </EditText>
  </LinearLayout>

  <Button
    android:id="@+id/patientsearch_new_patient"
    style="@style/Clinic.Button.PatientEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/patientsearch_toolbar"
    android:contentDescription="@string/patientsearch_new_patient"
    android:drawableStart="@drawable/ic_add_circle_outline_24dp"
    android:text="@string/patientsearch_new_patient"
    android:visibility="gone" />

  <android.support.v7.widget.RecyclerView
    android:id="@+id/patientsearch_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/patientsearch_search"
    android:layout_below="@id/patientsearch_new_patient"
    tools:listitem="@layout/list_patient_search" />

  <FrameLayout
    android:id="@+id/patientsearch_search"
    style="@style/Clinic.FullWidthButtonFrame"
    android:layout_alignParentBottom="true"
    android:background="@color/color_accent">

    <Button
      style="@style/Clinic.FullWidthButton"
      android:text="@string/patientsearch_search"
      android:textColor="@color/white" />
  </FrameLayout>
</org.simple.clinic.search.PatientSearchScreen>
