<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:ignore="MissingPrefix">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:fontFamily="sans-serif-medium"
    android:gravity="center"
    android:maxLines="1"
    android:paddingBottom="@dimen/textsize_18"
    android:paddingTop="@dimen/textsize_18"
    android:text="@string/scheduleappointment_next_visit_in"
    android:textColor="@color/black_opacity_80"
    android:textSize="@dimen/textsize_16">

    <requestFocus />
  </TextView>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="@dimen/spacing_8"
    android:layout_marginRight="@dimen/spacing_8"
    android:background="@color/black_opacity_10" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_24"
    android:layout_marginEnd="44dp"
    android:layout_marginStart="44dp"
    android:layout_marginTop="@dimen/spacing_16"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageButton
      android:id="@+id/scheduleappointment_decrement_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:padding="@dimen/spacing_12"
      android:src="@drawable/ic_remove_circle_outline_32dp"
      android:tint="?colorAccent"
      tools:ignore="ContentDescription" />

    <TextView
      android:id="@+id/scheduleappointment_current_date"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/spacing_8"
      android:layout_marginStart="@dimen/spacing_8"
      android:layout_weight="1"
      android:gravity="center_horizontal"
      android:textColor="@color/black_opacity_80"
      android:textSize="@dimen/textsize_34"
      tools:text="4 weeks" />

    <ImageButton
      android:id="@+id/scheduleappointment_increment_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:padding="@dimen/spacing_12"
      android:src="@drawable/ic_add_circle_outline_32dp"
      android:tint="?colorAccent"
      tools:ignore="ContentDescription" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_12"
    android:layout_marginEnd="@dimen/spacing_16"
    android:layout_marginStart="@dimen/spacing_16"
    android:layout_marginTop="@dimen/spacing_8"
    android:gravity="center_vertical">

    <Button
      android:id="@+id/scheduleappointment_not_now"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/spacing_4"
      android:layout_marginEnd="@dimen/spacing_8"
      android:layout_weight="1"
      android:background="@drawable/button_outline_ripple"
      android:gravity="center"
      android:text="@string/scheduleappointment_not_now"
      android:textColor="?colorAccent"
      tools:ignore="ButtonStyle" />

    <Button
      android:id="@+id/scheduleappointment_done"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/spacing_4"
      android:layout_marginStart="@dimen/spacing_8"
      android:layout_weight="1.05"
      android:gravity="center"
      android:paddingBottom="21dp"
      android:paddingTop="21dp"
      android:text="@string/scheduleappointment_done"
      android:textColor="@color/white"
      app:backgroundTint="?colorAccent"
      tools:ignore="ButtonStyle" />
  </LinearLayout>
</LinearLayout>
