<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="@dimen/spacing_8"
  android:layout_marginTop="@dimen/spacing_16"
  tools:ignore="MissingPrefix">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_16"
    android:paddingTop="@dimen/spacing_24">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/spacing_24"
      android:layout_marginStart="@dimen/spacing_24"
      android:text="@string/patientsummary_medicalhistory_title"
      android:textAppearance="@style/Clinic.V2.TextAppearance.H6.Grey0" />

    <TextView
      android:id="@+id/patientsummary_medicalhistory_last_update_timestamp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/spacing_24"
      android:layout_marginStart="@dimen/spacing_24"
      android:layout_marginTop="@dimen/spacing_4"
      android:text="@string/patientsummary_medicalhistory_last_updated"
      android:textAppearance="@style/Clinic.V2.TextAppearance.Body2Left.Grey1" />

    <org.simple.clinic.medicalhistory.MedicalHistoryQuestionView
      android:id="@+id/patientsummary_medicalhistory_question_heartattack"
      style="@style/Clinic.V2.SummaryMedicalHistoryQuestion"
      android:layout_marginTop="@dimen/spacing_8" />

    <org.simple.clinic.medicalhistory.MedicalHistoryQuestionView
      android:id="@+id/patientsummary_medicalhistory_question_stroke"
      style="@style/Clinic.V2.SummaryMedicalHistoryQuestion" />

    <org.simple.clinic.medicalhistory.MedicalHistoryQuestionView
      android:id="@+id/patientsummary_medicalhistory_question_kidney"
      style="@style/Clinic.V2.SummaryMedicalHistoryQuestion" />

    <org.simple.clinic.medicalhistory.MedicalHistoryQuestionView
      android:id="@+id/patientsummary_medicalhistory_question_hypertension"
      style="@style/Clinic.V2.SummaryMedicalHistoryQuestion" />

    <org.simple.clinic.medicalhistory.MedicalHistoryQuestionView
      android:id="@+id/patientsummary_medicalhistory_question_diabetes"
      style="@style/Clinic.V2.SummaryMedicalHistoryQuestion" />
  </LinearLayout>
</android.support.v7.widget.CardView>
