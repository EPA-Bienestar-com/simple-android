<?xml version="1.0" encoding="utf-8"?>
<org.simple.clinic.scanid.ScanSimpleIdScreen xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/scansimpleid_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:navigationIcon="@drawable/ic_arrow_back_24dp"
    app:title="@string/scansimpleid_title" />

  <org.simple.clinic.widgets.qrcodescanner.QrCodeScannerView
    android:id="@+id/scansimpleid_code_scanner_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/scansimpleid_toolbar"
    app:layout_constraintBottom_toBottomOf="parent"/>

</org.simple.clinic.scanid.ScanSimpleIdScreen>
