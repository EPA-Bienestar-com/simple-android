<?xml version="1.0" encoding="utf-8"?>
<org.simple.clinic.drugs.PrescribedDrugsEntryScreen android:id="@+id/prescribeddrugs_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <android.support.v7.widget.Toolbar
    android:id="@+id/prescribeddrugs_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:navigationIcon="@drawable/ic_arrow_back_24dp"
    app:title="@string/patient_prescribeddrugs_screen_title" />

  <android.support.v7.widget.RecyclerView
    android:id="@+id/prescribeddrugs_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</org.simple.clinic.drugs.PrescribedDrugsEntryScreen>
