<?xml version="1.0" encoding="utf-8"?>
<experiments.instantsearch.PatientSearchScreen xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/patientsearch_root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="false"
  android:clipChildren="false">

  <include
    android:id="@+id/allPatientsView"
    layout="@layout/view_allpatientsinfacility"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar"
    tools:visibility="gone" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/instantSearchResults"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbar"
    android:visibility="gone"
    tools:listitem="@layout/list_patient_search"
    tools:visibility="visible" />

  <LinearLayout
    android:id="@+id/newPatientContainer"
    style="@style/Clinic.V2.BottomAlignedButtonFrame.Blue2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:elevation="20dp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
      android:id="@+id/newPatientRationaleTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/spacing_4"
      android:layout_marginBottom="@dimen/spacing_4"
      android:gravity="center_horizontal"
      android:text="@string/patientsearchresults_register_patient_rationale"
      android:textAppearance="@style/Clinic.V2.TextAppearance.Body2Left.Grey0" />

    <org.simple.clinic.widgets.PrimarySolidButton
      android:id="@+id/newPatientButton"
      style="@style/Clinic.V2.Button.Solid.WithoutIcon.Blue1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/patientsearchresults_register_patient"
      android:textAppearance="@style/Clinic.V2.TextAppearance.Button1.White100" />
  </LinearLayout>

  <!-- This is placed below the all patients view so that the shadow of the toolbar can be cast -->
  <FrameLayout
    android:id="@id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/white100"
    android:elevation="@dimen/elevation_toolbar"
    android:padding="@dimen/spacing_8">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/background_patientsearch_searchfield"
      android:orientation="horizontal">

      <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/spacing_8"
        android:src="@drawable/ic_arrow_back_24dp"
        android:tint="@color/grey1"
        tools:ignore="ContentDescription" />

      <EditText
        android:id="@+id/searchQueryEditText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/spacing_8"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/patientsearch_hint"
        android:imeOptions="flagNoFullscreen|actionSearch"
        android:importantForAutofill="no"
        android:inputType="textPersonName|textCapWords|textFilter|textNoSuggestions"
        android:privateImeOptions="nm"
        android:textAppearance="@style/Clinic.V2.TextAppearance.Subtitle1Left.Grey1"
        android:textColorHint="@color/grey1"
        tools:targetApi="o" />

      <org.simple.clinic.newentry.clearbutton.ClearFieldImageButton
        style="@style/Clinic.V2.ClearEditTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_8"
        app:cleareableField="@id/searchQueryEditText" />
    </LinearLayout>
  </FrameLayout>
</experiments.instantsearch.PatientSearchScreen>
