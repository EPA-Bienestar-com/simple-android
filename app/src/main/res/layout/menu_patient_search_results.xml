<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignBottom="@+id/patientsearchresults_toolbar"
  android:layout_alignEnd="@+id/patientsearchresults_toolbar"
  android:layout_alignTop="@+id/patientsearchresults_toolbar"
  android:gravity="center_vertical"
  android:paddingEnd="@dimen/spacing_24"
  tools:ignore="RtlSymmetry,UnusedAttribute">

  <TextView
    style="@style/Clinic.V2.TextAppearance.Body2Tag.Grey1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/patientsearchresults_query_age"
    android:textAllCaps="true" />

  <TextView
    android:id="@+id/patientsearchresults_query_age"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_8"
    android:textAppearance="@style/Clinic.V2.TextAppearance.ToolbarTitle"
    tools:text="43" />
</LinearLayout>
