<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/spacing_8"
    android:paddingStart="@dimen/spacing_16">

    <TextView
      android:id="@+id/prescribeddrug_item_protocoldrug_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginEnd="@dimen/spacing_8"
      android:layout_weight="1"
      android:paddingBottom="@dimen/spacing_16"
      android:paddingTop="@dimen/spacing_16"
      android:textSize="@dimen/textsize_16"
      tools:text="Amlodipine" />

    <RadioGroup
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="horizontal">

      <CheckBox
        android:id="@+id/prescribeddrug_item_protocoldrug_dosage_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/selector_prescribeddrug_background"
        android:button="@null"
        android:drawablePadding="@dimen/spacing_4"
        android:gravity="center"
        android:minEms="6"
        android:paddingEnd="@dimen/spacing_24"
        android:paddingStart="@dimen/spacing_24"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        tools:text="5mg" />

      <CheckBox
        android:id="@+id/prescribeddrug_item_protocoldrug_dosage_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/spacing_16"
        android:background="@drawable/selector_prescribeddrug_background"
        android:button="@null"
        android:gravity="center"
        android:minEms="6"
        android:paddingEnd="@dimen/spacing_16"
        android:paddingStart="@dimen/spacing_16"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
        tools:text="10mg" />
    </RadioGroup>
  </LinearLayout>

  <View
    style="@style/Clinic.Separator.VerticalContent"
    android:layout_gravity="bottom"
    android:layout_marginEnd="@dimen/spacing_16"
    android:layout_marginStart="@dimen/spacing_16" />
</android.support.v7.widget.CardView>
