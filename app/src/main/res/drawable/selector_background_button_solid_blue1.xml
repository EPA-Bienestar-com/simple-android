<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <!--
    These insets are set in such a way that if we ever go back
    to platform buttons that have elevation, the spacings in
    usages will not change.
  -->
  <item android:state_enabled="false">
    <inset
      android:drawable="@drawable/background_button_grey2"
      android:insetTop="5dp"
      android:insetBottom="3dp"
      android:insetLeft="@dimen/spacing_4"
      android:insetRight="@dimen/spacing_4" />
  </item>

  <item>
    <inset
      android:drawable="@drawable/background_button_blue1"
      android:insetTop="5dp"
      android:insetBottom="3dp"
      android:insetLeft="@dimen/spacing_4"
      android:insetRight="@dimen/spacing_4" />
  </item>
</selector>
